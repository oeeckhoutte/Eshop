{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <h2 class="page-header">Connexion</h2>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <label for="username">Nom d'utilisateur :</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="validate" />
            </div>
            
            <div class="input-field col s6">
                <i class="material-icons prefix">https</i>
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password" required="required" class="validate" />
            </div>
        </div>
        
        <div class="row">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">Se souvenir de moi</label>
        </div>

        <div class="row">
            <input class="col s12 btn red btn-large" type="submit" id="_submit" name="_submit" value="Se connecter" />
        </div>
    </form>
</div>
{% endblock %}
